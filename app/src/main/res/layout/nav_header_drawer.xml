<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_nav_header_cross"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_text"
        app:layout_constraintTop_toTopOf="@id/iv_nav_header_cross"
        app:layout_constraintBottom_toBottomOf="@id/iv_nav_header_cross"
        app:layout_constraintStart_toEndOf="@id/iv_nav_header_cross"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>